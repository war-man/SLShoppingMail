@using DbOpertion.Models;
@{
    ViewBag.Title = "OrderPaySuccessPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var orderinfo = ViewBag.OrderInfo == null ? new Order_Info() : (Order_Info)ViewBag.OrderInfo;
}
<div style="min-height: 100vh;background-color:white;">
    <div style="width:100%;height:3.8rem;padding-top:1rem;" align="center">
        <img src="~/Current/images/icon/OK.png" />
        <label style="margin-top: .4rem;display: block;font-size: .7rem;font-weight: bold;">订单支付成功</label>
        <label style="margin-top: .4rem;display: block;font-size: .7rem;font-weight: bold;">订单编号：@orderinfo.OrderNo</label>
        <label style="margin-top: .4rem;display: block;font-size: .7rem;font-weight: bold;">￥@orderinfo.TotalPrice.Value.ToString("f2")</label>
        <div style="margin-top:.4rem;">
            <a style="width: 4.8rem;padding: .26rem;background-color:#008375;border-radius: 4px;color:white;" href="../../UserInfo/MyOrderList">返回我的订单</a>
        </div>
    </div>
</div>


