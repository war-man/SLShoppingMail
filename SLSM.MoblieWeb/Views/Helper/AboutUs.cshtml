@section js{
    <script>
        $(function () {
            $(".care-tab-box").click(function () {
                $(".care-tab").toggle();
            })

            $(".care-tab li a").click(function () {
                $(".part-faq.tab-pane.fade").hide();
                $($(this).attr('dataid')).show();
                $(this).parent().parent().parent().find('#select-bar .text').html($(this).html());
            })

             $(".care-tab-box .care-tab li a").each(function () {
                var tabName = $(this).attr("dataid");
                if (tabName == "#@ViewBag.tabname") {
                    $(this).trigger("click");
                }
                $(".care-tab-box .care-tab").hide();
             })
        })
    </script>
}
