
@{
    Layout = null;
    var OrderStatusList = (List<Tuple<string, string>>)ViewBag.OrderStatus;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>btable</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />

    <link href="~/Base/css/btable.css" rel="stylesheet" />
    <link href="~/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Current/css/MainShow/Order.css" rel="stylesheet" />
</head>

<body>
    <style>
        .layui-table td, .layui-table th {
            text-align: center;
        }
    </style>
    <div style="margin:0px; background-color: white; margin:0 10px;min-width:1500px;">
        <blockquote class="layui-elem-quote">
            @*<button type="button" class="layui-btn layui-btn-small" id="getAll"><i class="fa fa-plus" aria-hidden="true"></i> 添加</button>*@
            <form class="layui-form title-part" style="">
                <div class="layui-form-item">
                    <label class="layui-form-label">订单状态</label>
                    <div class="layui-input-block">
                        <select id="StatusType" name="StatusType" lay-filter="StatusType">
                            <option value="0">全部订单</option>
                            @foreach (var item in OrderStatusList)
                            {
                                <option value="@item.Item1">@item.Item2</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="layui-form-item" style="margin:0;float:right;clear: initial;">
                    <div class="layui-input-inline">
                        <input type="text" name="name" placeholder="支持模糊查询.." autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux" style="padding:0;">
                        <button id="submit_btn" lay-filter="search" class="layui-btn" lay-submit><i class="fa fa-search" aria-hidden="true"></i>查询</button>
                    </div>
                </div>
            </form>
            <div style="clear:both;" />
        </blockquote>
        <div id="content" style="width: 100%;height: 533px;"></div>
    </div>
    <script src="~/plugins/layui/layui.js?version=2.00"></script>
    <script src="~/Current/Scripts/Order/WechatOrder.js?version=20181017001"></script>
    <div id="tong" style="display: none;">
        <img src="http://layer.layui.com/images/tong.jpg">
    </div>
    <script>
        function open(src) {
            layui.use('layer', function () {
                var $ = layui.jquery,
                    layer = layui.layer,
                    layerTips = parent.layer === undefined ? layui.layer : parent.layer; //获取父窗口的layer对象

                $('#tong img').attr("src", src);
                $('#tong img').unbind();
                layer.open({
                    type: 1,
                    title: false,
                    closeBtn: 1,
                    area: '520px,520px',
                    //skin: 'layui-layer-nobg', //没有背景色
                    shadeClose: true,
                    content: $('#tong'),
                    zIndex: 20000000,
                    end: function () {
                        $("#tong").hide();
                    }
                });
            });
        }
    </script>
    <style>
        #tong {
            width: 481.5px;
            height: 483.5px;
        }

            #tong img {
                width: 480px;
                height: 480px;
                padding: 0px;
                margin: 0px;
            }
    </style>
</body>

</html>