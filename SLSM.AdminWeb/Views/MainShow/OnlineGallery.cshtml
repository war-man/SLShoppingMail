@{
    Layout = null;
    var Images = (List<DbOpertion.Models.Carousel_Image>)ViewBag.Images;
    var count = 0;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>轮播图设置</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Current/css/MainShow/Carousel.css" rel="stylesheet" />
    <script src="~/plugins/layui/layui.js?version=2.00"></script>
    <script src="~/Current/Scripts/jquery-1.10.2.js?version=2.00"></script>
    <script src="~/Current/Scripts/MainShow/OnlineGallery.js?version=2.00"></script>
    <script src="~/Current/Scripts/ajax.js?version=2.00"></script>
    <style>
        .layui-elem-field.carousel-content {
            width: 23%;
        }
    </style>
</head>
<body>
    <div style="margin: 15px;">
        <div class="layui-form-item">
            <a href="javascript:;" class="layui-btn layui-btn-small" id="add" onclick="AddImage()">
                <i class="layui-icon"></i> 添加图片
            </a>
        </div>
        <fieldset class="layui-elem-field layui-field-title">
            <legend>在线图库（最好比例1:1）</legend>
        </fieldset>
        @foreach (var item in Images)
        {
            count++;
            <fieldset class="layui-elem-field carousel-content" style="height:350px;">
                <legend>在线图库第<label>@count</label>张</legend>
                <div class="layui-field-box">
                    <div class="left-part">
                        <img src="@item.Image" />
                    </div>
                    <div class="right-part">
                        <button class="layui-btn layui-btn-normal" onclick="EditImage(@item.Id)">修改</button>
                        <br />
                        <button class="layui-btn layui-btn-danger" onclick="DeleteImage(@item.Id)">删除</button>
                    </div>
                    <div style="clear:both;" />
                </div>
            </fieldset>
        }
        <div style="clear:both;" />
    </div>
</body>
</html>