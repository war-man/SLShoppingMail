@using DbOpertion.Models;
@{
    Layout = null;
    var TodayOrder = ViewBag.TodayOrder == null ? new Todaysuccessorder() : (Todaysuccessorder)ViewBag.TodayOrder;
    TodayOrder.TotalPrice = TodayOrder.TotalPrice == null ? 0 : TodayOrder.TotalPrice;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>今日成单量</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Current/css/MainShow/Carousel.css" rel="stylesheet" />
    <script src="~/plugins/layui/layui.js?version=2.00"></script>
    <script src="~/Current/Scripts/jquery-1.10.2.js?version=2.00"></script>
    <script src="~/Current/Scripts/ajax.js?version=2.00"></script>
</head>
<body>
    <div style="margin: 15px;">
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 50px;">
            <legend>今日成交量</legend>
        </fieldset>
        <fieldset class="layui-elem-field">
            <legend>今日成单量</legend>
            <div class="layui-field-box">
                今日成单量：@TodayOrder.OrderCount
            </div>
        </fieldset>
        <fieldset class="layui-elem-field">
            <legend>交易金额</legend>
            <div class="layui-field-box">
                交易金额：￥@TodayOrder.TotalPrice
            </div>
        </fieldset>
        <div style="clear:both;" />
    </div>
</body>
</html>