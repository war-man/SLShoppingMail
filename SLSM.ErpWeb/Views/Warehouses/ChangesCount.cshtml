
@{
    Layout = null;
    var Id = (int)ViewBag.ChangeId;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no">
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Base/css/btable.css" rel="stylesheet" />
    <link href="~/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body style="">
    <style>
        table tr td:last-child {
            text-align: left;
        }
    </style>
    <div style="margin:0px; background-color: white; margin:0 10px;min-width:1400px;">
        <blockquote class="layui-elem-quote" style="background-color:white">
            <form class="layui-form title-part" style="">
                <div class="layui-inline">
                </div>
                <div class="layui-form-item" style="margin:0;float:right;clear: initial;">
                    <div class="layui-input-inline">
                        <input type="text" name="name" placeholder="支持模糊查询.." autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux" style="padding:0;">
                        <button id="submit_btn" lay-filter="search" class="layui-btn" lay-submit><i class="fa fa-search" aria-hidden="true"></i>搜索</button>
                    </div>
                </div>
            </form>
            <div style="clear:both;"></div>
            <input type="hidden" id="storageId" name="storageId" value="@Id" />
        </blockquote>
        <div id="content" style="width: 100%;height: 533px;"></div>
    </div>
    <script src="~/plugins/layui/layui.js?version=20181017001"></script>
    <script src="~/Current/Scripts/Storage/Change.js?version=20181017001"></script>
</body>
</html>





















