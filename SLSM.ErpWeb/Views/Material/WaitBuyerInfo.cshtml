@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Table</title>
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Base/css/global.css" rel="stylesheet" />
    <link href="~/Base/css/btable.css" rel="stylesheet" />
    <link href="~/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/plugins/layui/layui.js?version=20181017001"></script>
    <script src="~/Current/Scripts/jquery-1.10.2.min.js?version=20181017001"></script>
    <script src="~/Current/Scripts/WaitBuyerInfo/Index.js?version=20181017001"></script>
    <script src="~/Current/Scripts/ajax.js?version=20181017001"></script>
</head>
<body>
    <div style="margin:0px; background-color: white; margin:0 10px;min-width:1400px;">
        <div class="hidden-div">
        </div>
        @if (ViewBag.RowCount != 0)
        {
            <div class="admin-main">
                <div class="btable" style="width:101%">
                    <table class="layui-table layui-form ">
                        <thead>
                            <tr style="background-color:white">
                                <th style="text-align:left;"><input class="a1" type="checkbox" lay-filter="allselector" lay-skin="primary">序号</th>
                                <th>SKU#</th>
                                <th>产品货号</th>
                                <th>规格型号</th>
                                <th>供应商</th>
                                <th>中文单位</th>
                                <th>单价</th>
                                <th>采购数量</th>
                                <th>采购金额</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="content" class="btable-content"></tbody>
                    </table>
                    <div style="text-align: center;margin-top:50px;">
                        <button class="layui-btn layui-btn-normal" style="width: 190px;font-size: 20px;font-weight: 100;padding: 0 10px;" onclick="ListBuyer()">
                            <i class="layui-icon" style="font-size: 25px;">&#xe63c;</i> 批量生成采购单
                        </button>
                        <button class="layui-btn layui-btn-danger" style="width:140px;font-size:20px;font-weight: 100;padding: 0 10px;" onclick="ListDel()">
                            <i class="layui-icon" style="font-size: 25px;">&#xe640;</i>清空列表
                        </button>
                    </div>
                </div>
                <div class="admin-table-page">
                    <div id="paged" class="page">
                    </div>
                </div>
            </div>
            <!--模板-->
            <script type="text/html" id="tpl">
                {{# layui.each(d.list, function(index, item){ }}
                <tr>
                    <td style="text-align:left;"><input type="checkbox" name="Id" lay-skin="primary" value="{{ item.Id }}">{{ item.Id}}</td>
                    <td>{{ item.Color }}</td>
                    <td>{{ item.ChinaProductName }}</td>
                    <td>{{ item.Specification }}</td>
                    <td>{{ item.producerName }}</td>
                    <td>{{ item.ChinaUnit }}</td>
                    <td>{{ item.buyerPrice }}</td>
                    <td>{{ item.buyerCount }}</td>
                    <td>{{ item.DeliverMoney }}</td>
                    <td>
                        <button class="layui-btn layui-btn-mini layui-icon" onclick="DeleteById({{ item.Id }})">
                            <i class="layui-icon" style="margin-top:-1px;">&#xe640;</i> 删除
                        </button>
                    </td>
                </tr>
                {{# }); }}
            </script>
        }
        else
        {
            <div style="text-align:center;">
                <img src="~/Current/Icon/listNone.png" style="margin-top:100px;" />
                <div style="font-size: 18px;margin: 30px 0;color: #858585;">
                    当前采购列表为空
                </div>
                <button style="background-color: #35A9FE;border: none;padding: 10px;color: white;font-size: 16px;">
                    立即生成采购
                </button>
            </div>


        }

    </div>
</body>
</html>

