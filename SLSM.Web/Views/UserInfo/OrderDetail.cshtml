    #tong {
        background-color: white;
    }


        #tong .designContainer {
            width: 650px !important;
            border: none;
            top: 0px;
            min-height: 500px;
        }

            #tong .designContainer .skuimgs {
                clear: both;
                padding-top: 12px;
