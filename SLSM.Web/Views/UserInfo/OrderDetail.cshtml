                    #tong .designContainer .skuimgs .designImg .itemImg {
                        width: 80px;
                        height: 80px;
                        border: 1px solid white;
                        cursor: pointer;
                    }

            #tong .designContainer .imgbox {
                margin-top: 10px !important;
                margin-left: 120px !important;
